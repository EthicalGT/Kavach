<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgcolor"
    android:orientation="vertical"
    tools:context=".feedback">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/brandname"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_weight="5"
            android:paddingLeft="20dp"
            android:text="KAVACH"
            android:textColor="#fff"
            android:textSize="25dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/alerts"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/baseline_notifications_none_24"
            android:textColor="#fff"
            android:textSize="25dp" />

        <Button
            android:id="@+id/navbar"
            android:layout_width="20dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/baseline_dehaze_24"
            android:fontFamily="sans-serif"
            android:onClick="show_menu"
            android:textColor="#fff"
            android:paddingLeft="10dp"
            android:textSize="25dp" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/bgcolor"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="50dp">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/feedback"
        android:layout_gravity="center"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="✨ Feedback ✨"
        android:textColor="#fff"
        android:textAllCaps="false"
        android:textSize="35dp"
        android:paddingTop="15dp"
        android:textStyle="bold"
        android:gravity="center"/>

    <EditText
        android:layout_width="280dp"
        android:layout_height="45dp"
        android:background="@drawable/btn_border"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:hint="Name"
        android:id="@+id/tb1"
        android:textColorHint="#fff"
        android:drawableLeft="@drawable/feedback_person"
        android:paddingLeft="10dp"
        android:textColor="#fff"
        android:inputType="textPersonName"
        android:drawablePadding="10dp"
        />

    <EditText
        android:layout_width="280dp"
        android:layout_height="45dp"
        android:background="@drawable/btn_border"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:id="@id/tb2"
        android:hint="Contact No"
        android:textColorHint="#fff"
        android:inputType="numberDecimal"
        android:maxLength="10"
        android:textColor="#fff"
        android:drawableLeft="@drawable/feedback_contact"
        android:paddingLeft="10dp"
        android:drawablePadding="10dp"
        />

    <EditText
        android:layout_width="280dp"
        android:layout_height="120dp"
        android:inputType="textMultiLine"
        android:maxLines="10"
        android:textColor="#fff"
        android:id="@+id/tb3"
        android:scrollbars="vertical"
        android:background="@drawable/btn_border"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:hint="Message"
        android:textColorHint="#fff"
        android:drawableLeft="@drawable/feedback_message"
        android:paddingLeft="10dp"
        android:drawablePadding="10dp"
        />

    <Button
        android:layout_width="280dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/login_btn_style"
        android:text="Submit"
        android:id="@id/btn"
        android:textColor="#fff"
        android:textSize="20dp"/>

    </LinearLayout>
    <LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="horizontal"
android:layout_marginTop="80dp">

<Button
    android:layout_width="wrap_content"
    android:layout_height="80dp"
    android:id="@+id/home"
    android:layout_weight="1"
    android:paddingLeft="45dp"
    android:background="#4E108C"
    android:drawableLeft="@drawable/baseline_home_24"/>

<Button
    android:layout_width="wrap_content"
    android:layout_height="80dp"
    android:paddingLeft="45dp"
    android:layout_marginStart="3dp"
    android:background="#4E108C"
    android:id="@+id/sos"
    android:drawableLeft="@drawable/baseline_sos_24"
    android:layout_weight="1"/>

<Button
    android:layout_width="wrap_content"
    android:paddingLeft="45dp"
    android:id="@+id/btn"
    android:layout_height="80dp"
    android:layout_marginStart="3dp"
    android:background="#4E108C"
    android:drawableLeft="@drawable/baseline_contacts_24"
    android:layout_weight="1"/>

</LinearLayout>

</LinearLayout>