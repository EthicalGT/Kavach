<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bgcolor"
    tools:context=".video_tutorials">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/brandname"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_weight="5"
            android:paddingLeft="20dp"
            android:text="KAVACH"
            android:textColor="#fff"
            android:textSize="25dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/alerts"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/baseline_notifications_none_24"
            android:textColor="#fff"
            android:textSize="25dp" />

        <Button
            android:id="@+id/navbar"
            android:layout_width="20dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/baseline_dehaze_24"
            android:fontFamily="sans-serif"
            android:onClick="show_menu"
            android:textColor="#fff"
            android:paddingLeft="10dp"
            android:textSize="25dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:src="@drawable/securityshield" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tutorials List"
            android:textColor="#fff"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:textSize="25sp"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/login_btn_style"
            android:layout_marginStart="30dp"
            android:layout_marginTop="50dp"
            android:text="1. Jijutsu Techniques"
            android:id="@+id/btn1"
            android:textColor="#fff"
            android:textSize="16dp"
            android:layout_marginEnd="30dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/login_btn_style"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:text="1. Master Judo Moves"
            android:textColor="#fff"
            android:id="@+id/btn2"
            android:textSize="16dp"
            android:layout_marginEnd="30dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/login_btn_style"
            android:layout_marginStart="30dp"
            android:id="@+id/btn3"
            android:layout_marginTop="20dp"
            android:text="3. Self Defence Vol-I"
            android:textColor="#fff"
            android:textSize="16dp"
            android:layout_marginEnd="30dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/login_btn_style"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:id="@+id/btn4"
            android:text="4. Self Defence Vol-II"
            android:textColor="#fff"
            android:textSize="16dp"
            android:layout_marginEnd="30dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/login_btn_style"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:id="@+id/btn5"
            android:text="5. Self Defence Vol-III"
            android:textColor="#fff"
            android:textSize="16dp"
            android:layout_marginEnd="30dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="73dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:id="@+id/home"
            android:layout_weight="1"
            android:paddingLeft="45dp"
            android:background="#4E108C"
            android:drawableLeft="@drawable/baseline_home_24"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:paddingLeft="45dp"
            android:layout_marginStart="3dp"
            android:background="#4E108C"
            android:id="@+id/sos"
            android:drawableLeft="@drawable/baseline_sos_24"
            android:layout_weight="1"/>

        <Button
            android:layout_width="wrap_content"
            android:paddingLeft="45dp"
            android:layout_height="80dp"
            android:layout_marginStart="3dp"
            android:background="#4E108C"
            android:drawableLeft="@drawable/baseline_contacts_24"
            android:layout_weight="1"/>

    </LinearLayout>

</LinearLayout>