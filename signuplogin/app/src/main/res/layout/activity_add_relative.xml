<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bgcolor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/brandname"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:paddingLeft="20dp"
            android:src="@drawable/add_relative"
            android:text="KAVACH"
            android:textColor="#fff"
            android:textSize="25dp"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="ADD CONTACT"
            android:textColor="#fff"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_weight="1"
            android:textSize="25dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp">

        <EditText
            android:id="@+id/tw1"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginStart="50dp"
            android:hint="Full Name"
            android:paddingLeft="10dp"
            android:textColorHint="#fff"
            android:textColor="#fff"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/baseline_person_24"
            android:layout_marginEnd="50dp"
            android:background="@drawable/btn_border2" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp">

        <EditText
            android:id="@+id/tw2"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:drawableLeft="@drawable/baseline_phone_24"
            android:drawablePadding="10dp"
            android:layout_weight="1"
            android:hint="Mobile No"
            android:textColor="#fff"
            android:paddingLeft="10dp"
            android:maxLength="10"
            android:textColorHint="#fff"
            android:inputType="numberDecimal"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:background="@drawable/btn_border2" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/addContact"
            android:layout_width="match_parent"
            android:layout_marginStart="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="50dp"
            android:text="Add"
            android:textSize="20dp"
            android:textColor="#fff"
            android:background="@drawable/login_btn_style"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="115dp">

        <Button
            android:id="@+id/home"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:background="#4E108C"
            android:drawableLeft="@drawable/baseline_home_24"
            android:paddingLeft="45dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:paddingLeft="45dp"
            android:id="@+id/sos"
            android:layout_marginStart="3dp"
            android:background="#4E108C"
            android:drawableLeft="@drawable/baseline_sos_24"
            android:layout_weight="1"/>

        <Button
            android:layout_width="wrap_content"
            android:paddingLeft="45dp"
            android:layout_height="80dp"
            android:id="@+id/contact"
            android:layout_marginStart="3dp"
            android:background="#4E108C"
            android:drawableLeft="@drawable/baseline_contacts_24"
            android:layout_weight="1"/>

    </LinearLayout>
</LinearLayout>