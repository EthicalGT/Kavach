<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/bgcolor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/brandname"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_weight="5"
            android:paddingLeft="20dp"
            android:text="KAVACH Administrator"
            android:textColor="#fff"
            android:textSize="25dp"
            android:textStyle="bold" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/bgcolor"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="100dp"> <!-- Adjusted margin top to 0dp -->

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:paddingLeft="20dp"
            app:srcCompat="@drawable/gt" />

        <TextView
            android:id="@+id/user"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="16dp"
            android:layout_weight="4"
            android:text="Hello GT!\nWelcome Back..."
            android:textColor="#fff"
            android:textSize="25sp"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="80dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Actionables"
            android:textAllCaps="true"
            android:textColor="#fff"
            android:textSize="17dp"
            android:textStyle="bold"
            android:drawableRight="@drawable/baseline_horizontal_rule_24"
            android:drawableLeft="@drawable/baseline_horizontal_rule_24"
            android:textAlignment="center"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="40dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:background="@drawable/section_corners"
            android:text="Alerts"
            android:textAllCaps="false"
            android:id="@+id/alert"
            android:textSize="17dp"
            android:paddingTop="10dp"
            android:drawableTop="@drawable/alerts"
            android:textColor="#fff"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="50dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="Feedbacks"
            android:textAllCaps="false"
            android:id="@+id/ambulance"
            android:textColor="#fff"
            android:textSize="17dp"
            android:drawableTop="@drawable/feedbacks"
            android:paddingTop="10dp"
            android:background="@drawable/section_corners"
            android:layout_weight="1"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@drawable/baseline_horizontal_rule_25"
            android:drawableRight="@drawable/baseline_horizontal_rule_25"
            android:textColor="#fff"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>