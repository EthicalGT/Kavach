<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgcolor"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Don't have an Account?"
        android:textColor="@color/white"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.340"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.901" />

    <EditText
        android:id="@+id/tb1"
        android:layout_width="236dp"
        android:layout_height="44dp"
        android:background="@drawable/btn_border"
        android:ems="10"
        android:hint="Mobile No"
        android:textColorHint="#fff"
        android:textColor="#fff"
        android:drawableLeft="@drawable/baseline_phone_24"
        android:drawablePadding="7dp"
        android:padding="10dp"
        android:maxLength="10"
        android:inputType="phone"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.703" />

    <EditText
        android:id="@+id/tb2"
        style="@style/Widget.AppCompat.AutoCompleteTextView"
        android:layout_width="237dp"
        android:layout_height="46dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/btn_border"
        android:ems="10"
        android:maxLength="12"
        android:hint="Password"
        android:textColorHint="#fff"
        android:inputType="textPassword"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#fff"
        android:drawableLeft="@drawable/baseline_lock_24"
        android:drawablePadding="7dp"
        android:padding="10dp"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tb1"
        app:layout_constraintVertical_bias="0.878" />

    <Button
        android:id="@+id/button"
        android:layout_width="237dp"
        android:layout_height="48dp"
        android:layout_marginStart="160dp"
        android:layout_marginTop="37dp"
        android:layout_marginEnd="160dp"
        android:layout_marginBottom="24dp"
        android:text="Login"
        android:textSize="18dp"
        android:textColor="#fff"
        android:backgroundTint="#ffb347"
        android:background="@drawable/login_btn_style"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.517"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tb2"/>

    <TextView
        android:id="@+id/signup"
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="101dp"
        android:layout_marginEnd="86dp"
        android:layout_marginBottom="70dp"
        android:text="Sign-Up"
        android:textColor="#fff"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/tb2"
        app:layout_constraintVertical_bias="0.44" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="292dp"
        android:layout_height="202dp"
        app:layout_constraintBottom_toTopOf="@+id/tb1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.244"
        app:srcCompat="@drawable/women" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="175dp"
        android:layout_marginTop="42dp"
        android:layout_marginEnd="178dp"
        android:layout_marginBottom="71dp"
        android:text="KAVACH"
        android:textColor="#fff"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tb1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.475"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="179dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="174dp"
        android:layout_marginBottom="35dp"
        android:text="Kindly login with your phone number and password..!"
        android:textColor="#fff"
        app:layout_constraintBottom_toTopOf="@+id/tb1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

</androidx.constraintlayout.widget.ConstraintLayout>