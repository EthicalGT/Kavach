<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/bgcolor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/brandname"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_weight="5"
            android:paddingLeft="20dp"
            android:text="KAVACH"
            android:textColor="#fff"
            android:textSize="25dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/alerts"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/baseline_notifications_none_24"
            android:textColor="#fff"
            android:textSize="25dp" />

        <Button
            android:id="@+id/navbar"
            android:layout_width="20dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/baseline_dehaze_24"
            android:fontFamily="sans-serif"
            android:onClick="show_menu"
            android:textColor="#fff"
            android:paddingLeft="10dp"
            android:textSize="25dp" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/bgcolor"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"> <!-- Adjusted margin top to 0dp -->

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:paddingLeft="20dp"
            app:srcCompat="@drawable/women" />

        <TextView
            android:id="@+id/user"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="16dp"
            android:layout_weight="4"
            android:text="Hello,\nTirtha Bhagwat"
            android:textColor="#fff"
            android:textSize="25sp"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="80dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Actionables"
            android:textAllCaps="true"
            android:textColor="#fff"
            android:textSize="17dp"
            android:textStyle="bold"
            android:drawableRight="@drawable/baseline_horizontal_rule_24"
            android:drawableLeft="@drawable/baseline_horizontal_rule_24"
            android:textAlignment="center"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="40dp"> <!-- Adjusted margin top to 0dp -->

        <Button
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:background="@drawable/section_corners"
            android:text="Tutorials"
            android:id="@+id/tutorials"
            android:textAllCaps="false"
            android:textSize="17dp"
            android:paddingTop="10dp"
            android:drawableTop="@drawable/rounded_audio_video_receiver_24"
            android:textColor="#fff"
            android:layout_weight="1"/>

        <Button
            android:layout_width="wrap_content"
            android:id="@+id/contacts"
            android:layout_height="100dp"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:background="@drawable/section_corners"
            android:drawableTop="@drawable/rounded_add_call_24"
            android:paddingTop="10dp"
            android:textSize="17dp"
            android:text="Contacts"
            android:textAllCaps="false"
            android:textColor="#fff" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="Police"
            android:id="@+id/police"
            android:textColor="#fff"
            android:textSize="17dp"
            android:textAllCaps="false"
            android:drawableTop="@drawable/police"
            android:layout_marginStart="10dp"
            android:paddingTop="10dp"
            android:background="@drawable/section_corners"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="50dp"> <!-- Adjusted margin top to 0dp -->

        <Button
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="Emergency"
            android:textAllCaps="false"
            android:id="@+id/ambulance"
            android:textColor="#fff"
            android:textSize="17dp"
            android:drawableTop="@drawable/outline_ambulance_24"
            android:paddingTop="10dp"
            android:background="@drawable/section_corners"
            android:layout_weight="1"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="Audio"
            android:id="@+id/audio"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:paddingTop="10dp"
            android:textSize="17dp"
            android:drawableTop="@drawable/audio"
            android:layout_marginStart="10dp"
            android:background="@drawable/section_corners"
            android:layout_weight="1"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginStart="10dp"
            android:text="Fire"
            android:id="@+id/fire"
            android:paddingTop="10dp"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="17dp"
            android:drawableTop="@drawable/fireme"
            android:background="@drawable/section_corners"
            android:layout_weight="1"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@drawable/baseline_horizontal_rule_25"
            android:drawableRight="@drawable/baseline_horizontal_rule_25"
            android:textColor="#fff"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="85dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:id="@+id/home"
            android:layout_weight="1"
            android:paddingLeft="45dp"
            android:background="#4E108C"
            android:drawableLeft="@drawable/baseline_home_24"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:paddingLeft="45dp"
            android:layout_marginStart="3dp"
            android:background="#4E108C"
            android:id="@+id/sos"
            android:drawableLeft="@drawable/baseline_sos_24"
            android:layout_weight="1"/>

        <Button
            android:layout_width="wrap_content"
            android:paddingLeft="45dp"
            android:layout_height="80dp"
            android:layout_marginStart="3dp"
            android:background="#4E108C"
            android:drawableLeft="@drawable/baseline_contacts_24"
            android:layout_weight="1"/>

    </LinearLayout>
</LinearLayout>